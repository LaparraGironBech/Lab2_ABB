@model ListaArtesanal.Models.Clientesdata
@{
    double PUnitario = Math.Round(( Model.cantidadpagar / Model.Cantidadmedicamento),2);
   
}

<a asp-action="MenuPrincipal" class="alert">Home</a>
<a asp-action="Hacerpedido">Nuevo Registro</a><br /><br />
<div id="HTMLtoPDF" style="background: #ffffff; width:100%; border:3px solid;align-content:center">
    <div style="margin:3% 3% 3% 3%;">
        <h2>Farmacia Salud es Vida<br /></h2>
        <p style="font-size:13px;">
            16av. 20-02 Ciudad de Guatemala, Zona 16<br />
            Código Postal: 01000<br />
            PBX: (+502) 2200-0022<br />
            e-mail: SaludEsVida@correo.com
        </p><br /><br />

        <p style="background:#0026ff; width:45%; color:#ffffff;">Factura A</p>
        <p>
            <b>Nombre: </b>@Model.Name @Model.Apellido <br />
            <b>Nit: </b> @Model.NIT<br />
            <b>Fecha: </b> @Model.FechaDeCompra
        </p>

        <table class="table table-bordered border-primary">
            <thead style="background:#0026ff; color:#ffffff;">
                <tr>
                    <th>
                        Cantidad
                    </th>
                    <th>
                        Descripción
                    </th>
                    <th>
                        P./Unitario
                    </th>
                    <th>
                        P.Total
                    </th>


                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Model.Cantidadmedicamento
                    </td>
                    <td>
                        @Model.NombreMedicamento
                    </td>
                    <td>
                      $ @PUnitario
                    </td>
                    <td>
                      $ @Model.cantidadpagar
                    </td>
                </tr>
                <tr style="border:0;">
                    <td></td>
                    <td></td>
                    <td style="background: #bcd6ee;"><b>TOTAL</b></td>
                    <td style="background: #dceaf6;"><b>$ @Model.cantidadpagar </b></td>
                </tr>
            </tbody>
        </table><br /><br />
        <div style="align-content:center;">
            "La información del rubro detalle puede ser complementada con otra información adicional de acuerdo a las necesidades del exportador"
        </div>
    </div>
</div>
<br /><br />
<button style="align-content:center;" href="#" onclick="HTMLtoPDF()" class="btn btn-primary">Generar PDF</button>


<script src="~/js/jquery-2.1.3.js"></script>
<script src="~/js/pdfFromHTML.js"></script>
<script src="~/js/jspdf.js"></script>